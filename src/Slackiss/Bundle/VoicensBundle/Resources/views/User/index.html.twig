{% extends "SlackissVoicensBundle:layout:layout.html.twig" %}

{% block title %}文章列表{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>封面</th>
            <th>标题</th>
            <th>摘要</th>
            <th>更新时间</th>

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                <a href="{{vich_uploader_asset(entity,'attach')}}" target="_blank">
                    <img src="{{vich_uploader_asset(entity,'attach')|imagine_filter('thumbnail')}}"/>
                </a>
                </td>
                <td><a href="{{ path('user_article_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.summary|nl2br }}</td>
                <td>{{ entity.modified|date('Y-m-d h:j') }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{knp_pagination_render(entities) }}
{% endblock %}